<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundFirstTime"
    tools:context=".SplashActivity">

    <LinearLayout
        android:id="@+id/llFirstTime"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+id/ivLogoFirstTime"
            android:layout_marginTop="50dp"
            android:src="@drawable/banner"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginTop="80dp"
            android:id="@+id/iv1FirstTime"
            android:src="@drawable/banner_bottom_1_1"
            android:layout_width="wrap_content"
            android:layout_height="150dp"/>

        <ImageView
            android:id="@+id/iv2FirstTime"
            android:src="@drawable/banner_bottom_1_2"
            android:layout_width="wrap_content"
            android:layout_height="150dp"/>
    </LinearLayout>



</RelativeLayout>