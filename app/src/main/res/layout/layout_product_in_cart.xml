<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imgProductPic"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:src="@mipmap/americano" />

    <TextView
        android:id="@+id/txtProductName"
        android:layout_width="204dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="57dp"
        android:layout_toEndOf="@+id/imgProductPic"
        android:text="COMBO SHUSHI"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imgBtnDelete"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/txtProductName"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:background="#00F3F1F1"

        app:srcCompat="@drawable/ic_clear_red_24dp" />

    <TextView
        android:id="@+id/tvQuantity"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tvPrice"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/imgBtnDown"
        android:paddingTop="10dp"
        android:text="1"
        android:textAlignment="center"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/imgBtnUp"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@+id/tvPrice"
        android:layout_marginStart="0dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/tvQuantity"
        android:background="@color/colorBackground"
        app:srcCompat="@drawable/ic_keyboard_arrow_up_black_24dp" />

    <ImageButton
        android:id="@+id/imgBtnDown"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@+id/tvPrice"
        android:layout_marginStart="12dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/imgProductPic"
        android:background="@color/colorBackground"
        app:srcCompat="@drawable/ic_keyboard_arrow_down_white_24dp" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="143dp"
        android:layout_height="26dp"
        android:layout_below="@+id/txtProductName"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="89dp"
        android:layout_toEndOf="@+id/imgProductPic"
        android:text="17.000 VNĐ"
        android:textSize="16sp" />

</RelativeLayout>